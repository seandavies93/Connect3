<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sean.connect3.MainActivity">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/gridLayout">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftcolumnyellow"
            android:layout_row="0"
            android:layout_column="0"
            android:background="#faea03"
            android:onClick="action" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/middlecolumnyellow"
            android:layout_row="0"
            android:layout_column="1"
            android:background="#faea03"
            android:onClick="action" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightcolumnyellow"
            android:layout_row="0"
            android:layout_column="2"
            android:background="#faea03"
            android:onClick="action" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/leftcolumnred"
            android:layout_row="1"
            android:layout_column="0"
            android:background="#fc0303"
            android:onClick="action" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/middlecolumnred"
            android:layout_row="1"
            android:layout_column="1"
            android:background="#fc0303"
            android:onClick="action" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rightcolumnred"
            android:layout_row="1"
            android:layout_column="2"
            android:background="#fc0303"
            android:onClick="action" />
    </GridLayout>

    <GridLayout
        android:layout_width="360dp"
        android:layout_height="360dp"
        android:columnCount="4"
        android:rowCount="4"
        android:background="@drawable/board"
        android:id="@+id/imagegrid"
        android:layout_above="@+id/gridLayout"
        android:layout_centerInParent="true">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView"
            android:layout_row="0"
            android:layout_column="0" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView2"
            android:layout_row="0"
            android:layout_column="1" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView3"
            android:layout_row="0"
            android:layout_column="2" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView4"
            android:layout_row="1"
            android:layout_column="0" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView5"
            android:layout_row="1"
            android:layout_column="1" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView6"
            android:layout_row="1"
            android:layout_column="2" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView7"
            android:layout_row="2"
            android:layout_column="0" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView8"
            android:layout_row="2"
            android:layout_column="1" />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:id="@+id/imageView9"
            android:layout_row="2"
            android:layout_column="2" />
    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset"
        android:id="@+id/button7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:onClick="reset" />


</RelativeLayout>
